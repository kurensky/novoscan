-- Function: owner_track.get_attribute_name(bigint)

-- DROP FUNCTION owner_track.get_attribute_name(bigint);

CREATE OR REPLACE FUNCTION owner_track.get_attribute_name(roleid bigint)
  RETURNS character varying AS
$BODY$
DECLARE
  a_name character varying(30);
  gatn CURSOR(n_id BIGINT)
    IS
    SELECT r.atta_name
      FROM attributes r
     WHERE r.attr_id = n_id
     ;

BEGIN
  OPEN gatn(roleid);
  FETCH gatn INTO a_name;
  CLOSE gatn;
  RETURN a_name;
END;
$BODY$
  LANGUAGE plpgsql VOLATILE SECURITY DEFINER
  COST 100;
ALTER FUNCTION owner_track.get_attribute_name(bigint)
  OWNER TO owner_track;
GRANT EXECUTE ON FUNCTION owner_track.get_attribute_name(bigint) TO public;
GRANT EXECUTE ON FUNCTION owner_track.get_attribute_name(bigint) TO owner_track;
GRANT EXECUTE ON FUNCTION owner_track.get_attribute_name(bigint) TO track_server_all;
COMMENT ON FUNCTION owner_track.get_attribute_name(bigint) IS 'Имя атрибута';

