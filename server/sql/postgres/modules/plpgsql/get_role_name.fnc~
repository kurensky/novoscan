
CREATE OR REPLACE FUNCTION get_role_name
 (roleid BIGINT
 )
  RETURNS character varying AS
$BODY$
DECLARE
  r_name character varying(30);
  grl CURSOR(n_id BIGINT)
    IS
    SELECT r.role_name
      FROM roles r
     WHERE r.role_id = n_id
     ;

BEGIN
  OPEN grl(roleid);
  FETCH grl INTO r_name;
  CLOSE grl;
  RETURN r_name;
END;
$BODY$
  LANGUAGE 'plpgsql' VOLATILE
  SECURITY DEFINER;

COMMENT ON FUNCTION get_role_name
 (BIGINT
 )
 IS 'Имя роли';

REVOKE ALL ON FUNCTION get_role_name
 (BIGINT
 ) FROM public;

GRANT EXECUTE ON FUNCTION get_role_name
 (BIGINT
 ) TO track_server_all;
