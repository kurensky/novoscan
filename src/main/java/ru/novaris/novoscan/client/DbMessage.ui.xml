<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
	<ui:style>
	.textArea {
		text-align: left;
		font-size: small;
		color: black;
	}
	</ui:style>
	
		<g:DockPanel ui:field="panel" horizontalAlignment="ALIGN_CENTER" spacing="5">
			<g:Dock direction="WEST" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							
					<g:Image width="50" height="50" ui:field="imageMessage"/>
			</g:Dock>
					<g:Dock direction="CENTER" verticalAlignment="ALIGN_MIDDLE">
				
					<g:TextArea ui:field="textArea" characterWidth="50" textAlignment="ALIGN_LEFT" addStyleNames="{style.textArea}"
					visibleLines="5" width="250"
					readOnly="true" alignment="CENTER"/>

			</g:Dock>
			<g:Dock direction="SOUTH" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:HorizontalPanel>
						<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							<g:PushButton text="Apply" ui:field="apply"
									addStyleNames="button" width="80" height="20" />
						</g:Cell>
					</g:HorizontalPanel>
			</g:Dock>
		</g:DockPanel>
</ui:UiBinder>