<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

	<g:TabLayoutPanel ui:field="panel" barHeight="1.5" barUnit="EM">
		<g:tab>
			<g:header>Параметры</g:header>
			<g:HTMLPanel addStyleNames="buttonPanel"  height="100%" ui:field="paramsPanel">
				<g:Label text='Report' ui:field="reportName" />
				<table cellspacing='0' cellpadding='0'>
					<tr>
						<td>
							<g:PushButton text="Clear" ui:field="clear"
								addStyleNames="button" />
						</td>
						<td>
							<g:PushButton text="Cancel" ui:field="cancel"
								addStyleNames="button" />
						</td>
						<td>
							<g:PushButton text="Apply" ui:field="apply"
								addStyleNames="button" />
						</td>
					</tr>
				</table>
				<g:ScrollPanel ui:field="scrollPanel"
					alwaysShowScrollBars="false">
					<g:FlexTable ui:field="flexTable" />
				</g:ScrollPanel>
			</g:HTMLPanel>
		</g:tab>
		<g:tab>
			<g:header>Отчёт</g:header>
			<g:Frame url="" ui:field="frame" width="100%" />
		</g:tab>
	</g:TabLayoutPanel>

</ui:UiBinder>